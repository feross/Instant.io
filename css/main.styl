@import 'nib'

*, *:after, *:before
  box-sizing: border-box

html, body
  margin: 0
  padding: 0
  height: 100%
  overflow: auto
  font-family: sans-serif

body.drag::before
  content: ''
  position fixed
  top: 0
  left: 0
  bottom: 0
  right: 0
  background: rgba(255, 0, 0, 0.3)
  border: 5px red dashed

main
  margin: 20px

label
  margin-right: 10px
input, button
  font-size: 16px

input[name=torrentId]
  width: 400px

.log, .speed
  font-family: monospace
  font-size: 14px

.speed:not(:empty)
  padding: 20px
  margin: 10px 0
  background: #EEE

.log p
  margin: 0

footer
  font-size: 0.8em
  margin: 30px 0

video, img, audio, iframe
  display: block

video, img, audio
  max-width: 100%
  margin: 10px 0

video
  min-width: 480px
  min-height: 270px

audio
  width: 100%
  height: 50px

iframe
  width: 1000px
  max-width: 100%
  height: 600px
  
.qr
  width: 100px
  height: 100px
