@import 'nib'

primary-blue = #589BFF
primary-gray = #cccccc
secondary-gray = #555555
wrap-max-width = 62em


*, *:after, *:before
  box-sizing: border-box

html, body
  margin: 0
  padding: 0
  height: 100%
  overflow: auto
  font-family: sans-serif

body.drag::before
  content: ''
  position fixed
  top: 0
  left: 0
  bottom: 0
  right: 0
  background: rgba(255, 0, 0, 0.3)
  border: 5px red dashed

a
  text-decoration: none;

a:visited
  color: black

main
  margin: 20px

label
  margin-right: 10px

hr
  border-color: primary-gray

input, button
  font-size: 16px

.form-control
  display: block;
  height: 34px;
  padding: 6px 12px;
  font-size: .8em;
  color: secondary-gray;
  background-color: #fff;
  border: 1px solid primary-gray;
  border-radius: 2px;


input[name=torrentId]
  width: 50%
  display: inline-block

#download-toggle
  cursor: pointer

.log, .speed
  font-family: monospace
  font-size: 14px

.speed:not(:empty)
  padding: 20px
  margin: 10px 0
  background: #EEE

.log p
  margin: 0

.wrap
  max-width: wrap-max-width
  margin: 0 auto

footer
  font-size: 0.8em

video, img, audio, iframe
  display: blocks

video, img, audio
  max-width: 100%
  margin: 10px 0

video
  min-width: 480px
  min-height: 270px

audio
  width: 100%
  height: 50px

iframe
  width: 1000px
  max-width: 100%
  height: 600px

.btn
  display: inline-block
  padding: .7em
  font-size: .8em
  font-weight: bold
  text-align: center
  white-space: nowrap
  vertical-align: middle
  -ms-touch-action: manipulation
  touch-action: manipulation
  cursor: pointer
  border: 1px solid transparent
  border-radius: 5px
  letter-spacing: .1em
  text-transform: uppercase

.btn-primary
  color: secondary-gray
  background-color: #FFFFFF
  border-color: primary-gray

.file-upload
  position: relative
  overflow: hidden
  margin: 10px
  width: 20em

.file-upload input.upload
  position: absolute
  top: 0
  right: 0
  margin: 0
  padding: 0
  font-size: 20px
  cursor: pointer
  opacity: 0

.e-glyph
  font: 300 4em/1em 'Poiret One', cursive

.u-display--none
  display: none

.u-font--thin
  font-weight: 300

.u-text-align--center
  text-align: center

.u-float--right
  float: right

.u-float--left
  float: left

.u-font--poiret
  font-family: 'Poiret One', cursive

.u-font--lato
  font-family: 'Lato', sans-serif
  font-weight: 300

.u-clear
  clear: both

.u-white-space--no-wrap
  white-space: no-wrap

.u-color--primary-blue
  color: primary-blue

.u-color--primary-gray
  color: primary-gray

.u-margin--sm
  margin: .5em

.u-margin--lg
  margin: 4em

.u-margin-top--md
  margin-top: 2em

.u-margin-top--lg
  margin-top: 4em

.u-margin-right--sm
  margin-right: .5em

.u-margin-bottom--lg
  margin-bottom: 4em
